{# templates/payment/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Paiements
{% endblock %}

{% block body %}
	<h1>Liste des Paiements</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Montant</th>
				<th>Statut</th>
				<th>Créé à</th>
				<th>Mis à jour à</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for payment in payments %}
				<tr>
					<td>{{ payment.id }}</td>
					<td>{{ payment.amount|number_format(2, '.', ',') }}</td>
					<td>{{ payment.status ? 'Complet' : 'Échoué' }}</td>
					<td>{{ payment.createdAt ? payment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ payment.updatedAt ? payment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_payment_show', {'id': payment.id}) }}">Voir</a>
						<a href="{{ path('app_payment_edit', {'id': payment.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_payment_new') }}">Créer nouveau</a>
{% endblock %}
