{# templates/special_row/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Row Index
{% endblock %}

{% block body %}
	<h1>Row Index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Sigle</th>
				<th>Capacity</th>
				<th>Sector</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for row in rows %}
				<tr>
					<td>{{ row.id }}</td>
					<td>{{ row.sigle }}</td>
					<td>{{ row.capacity }}</td>
					<td>{{ row.sector.name }}</td>
					<td>
						<a href="{{ path('app_row_show', {'id': row.id}) }}" class="btn btn-primary">show</a>
						<a href="{{ path('app_row_edit', {'id': row.id}) }}" class="btn btn-primary">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_special_row_new') }}">Crée nouvelle rangée</a>
{% endblock %}
