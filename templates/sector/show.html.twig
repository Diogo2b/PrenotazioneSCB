{% extends 'base.html.twig' %}

{% block title %}Détails du Secteur
{% endblock %}

{% block body %}
	<h1>Détails du Secteur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ sector.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ sector.name }}</td>
			</tr>
			<tr>
				<th>Sigle</th>
				<td>{{ sector.sigle }}</td>
			</tr>
			<tr>
				<th>Places Numérotées</th>
				<td>{{ sector.numberedSeats ? 'Oui' : 'Non' }}</td>
			</tr>
			<tr>
				<th>Capacité</th>
				<td>{{ sector.capacity }}</td>
			</tr>
			<tr>
				<th>Disponible à la Vente</th>
				<td>{{ sector.availableForSale ? 'Oui' : 'Non' }}</td>
			</tr>
			<tr>
				<th>Tribune</th>
				<td>{{ sector.tribune.name }}</td>
			</tr>
		</tbody>
	</table>

	<h2>Rangées</h2>
	<table class="table">
		<thead>
			<tr>
				<th>Sigle</th>
				<th>Capacité</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for row in sector.listRow %}
				<tr>
					<td>{{ row.sigle }}</td>
					<td>{{ row.capacity }}</td>
					<td>
						<a href="{{ path('app_row_show', {'id': row.id}) }}" class="btn btn-secondary">Voir</a>
						<a href="{{ path('app_row_edit', {'id': row.id}) }}" class="btn btn-primary">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_sector_index') }}" class="btn btn-primary">Retour à la liste</a>

	<a href="{{ path('app_sector_edit', {'id': sector.id}) }}" class="btn btn-primary">Modifier</a>

	{{ include('sector/_delete_form.html.twig') }}
{% endblock %}
