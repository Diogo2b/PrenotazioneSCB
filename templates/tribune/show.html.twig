{% extends 'base.html.twig' %}

{% block title %}Détails de la Tribune
{% endblock %}

{% block body %}
	<h1>Détails de la Tribune</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ tribune.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ tribune.name }}</td>
			</tr>
			<tr>
				<th>Sigle</th>
				<td>{{ tribune.sigle }}</td>
			</tr>
			<tr>
				<th>Places Numérotées</th>
				<td>{{ tribune.numberedSeats ? 'Oui' : 'Non' }}</td>
			</tr>
		</tbody>
	</table>

	<h2>Secteurs</h2>
	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Sigle</th>
				<th>Capacity</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for sector in tribune.sectors %}
				<tr>
					<td>{{ sector.name }}</td>
					<td>{{ sector.sigle }}</td>
					<td>{{ sector.capacity }}</td>
					<td>
						<a href="{{ path('app_sector_show', {'id': sector.id}) }}" class="btn btn-secondary">Voir</a>
						<a href="{{ path('app_sector_edit', {'id': sector.id}) }}" class="btn btn-primary">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun enregistrement trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_tribune_index') }}" class="btn btn-primary">Retour à la liste</a>

	<a href="{{ path('app_tribune_edit', {'id': tribune.id}) }}" class="btn btn-primary">Modifier</a>

	{{ include('tribune/_delete_form.html.twig') }}
{% endblock %}
