{% extends 'base.html.twig' %}

{% block title %}Détails de la Rangée
{% endblock %}

{% block body %}
	<h1>Détails de la Rangée</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ row.id }}</td>
			</tr>
			<tr>
				<th>Sigle</th>
				<td>{{ row.sigle }}</td>
			</tr>
			<tr>
				<th>Capacité</th>
				<td>{{ row.capacity }}</td>
			</tr>
			<tr>
				<th>Sièges</th>
				<td>{{ row.seats.count }}/{{ row.capacity }}</td>
			</tr>
			<tr>
				<th>Secteur</th>
				<td>{{ row.sector.name }}</td>
			</tr>
			<tr>
				<th>Tribune</th>
				<td>{{ row.sector.tribune.name }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_row_index') }}" class="btn btn-primary">Retour à la liste</a>

	<a href="{{ path('app_row_edit', {'id': row.id}) }}" class="btn btn-primary">Modifier</a>

	{{ include('row/_delete_form.html.twig') }}
{% endblock %}
